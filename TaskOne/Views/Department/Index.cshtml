@model TaskOne.Pagination.PaginatedResult<TaskOne.ViewModel.DepartmentVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="AddDepartment">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Date) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                    <a asp-action="UpdateDepartment" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="GetDepartmentByID" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="DeleteApartment" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
